<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_item_book_pic"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_blue_light" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_item_book_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"
                android:text="사물인터넷을 위한 리눅스 프로그래밍"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_item_book_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_bookmark_border_black_24dp" />
        </LinearLayout>


        <TextView
            android:layout_weight="2"
            android:id="@+id/tv_item_book_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="게임" />


        <TextView
            android:id="@+id/tv_item_book_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#9d9d9d"
            android:padding="8dp"
            android:text="대여중" />
    </LinearLayout>

</LinearLayout>